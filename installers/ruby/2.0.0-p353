pkgname="ruby"
pkgversion="2.0.0-p353"
pkgfile="${pkgname}-${pkgversion}.tar.gz"
pkguri="http://cache.ruby-lang.org/pub/ruby/2.0/${pkgfile}"
pkgmd5="78282433fb697dd3613613ff55d734c1"

install_package() {
  cd ${pkgbuild_path}
  ./configure \
    --prefix="${BREW_PREFIX}/rubies/${pkgname}-${pkgversion}" \
    --disable-install-doc \
    --disable-install-rdoc
  make
  make install
}
