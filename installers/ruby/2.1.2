pkgname="ruby"
pkgversion="2.1.2"
pkgfile="${pkgname}-${pkgversion}.tar.gz"
pkguri="http://cache.ruby-lang.org/pub/ruby/2.1/${pkgfile}"
pkgmd5="a5b5c83565f8bd954ee522bd287d2ca1"

install_package() {
  cd ${pkgbuild_path}
  ./configure \
    --prefix="${BREW_PREFIX}/rubies/${pkgname}-${pkgversion}" \
    --disable-install-doc \
    --disable-install-rdoc
  make
  make install
}
