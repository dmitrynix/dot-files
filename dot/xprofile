gnome-keyring-daemon --start --components=gpg,pkcs11,secrets,ssh
case $(hostname) in
desktop1)
  setxkbmap -layout us -variant mac -option altwin:swap_lalt
  ;;
ultrathin0)
  setxkbmap -layout us -variant mac -option altwin:swap_alt_win

  while true; do
    xsetroot -name "$(acpi -b)"
    sleep 1m
  done &
  ;;
esac

xsetroot -cursor_name left_ptr

feh --bg-fill ~/Dropbox/282535.jpg

if [[ ! -d "$TMPDIR" ]]; then
  export TMPDIR="/tmp/$USER"
  mkdir -p -m 700 "$TMPDIR"
fi

TMPPREFIX="${TMPDIR%/}/zsh"
if [[ ! -d "$TMPPREFIX" ]]; then
  mkdir -p "$TMPPREFIX"
fi
