xsetroot -name " "

case $(hostname) in
desktop1)
  setxkbmap -layout us -variant mac -option altwin:swap_lalt
  ;;
ultra0)
  setxkbmap -layout us -variant mac -option altwin:swap_alt_win
  xmodmap ~/.remap

